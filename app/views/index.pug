					= name
			link( rel="stylesheet", type='text/css', href='http://fonts.googleapis.com/css?family=Poppins:300|Comfortaa:400,700' )
			link( rel='stylesheet', type='text/css', href='css/layout.min.css' )
			link( rel='stylesheet', type='text/css', href='css/1056.css' )
			script( src='/js/app.min.js' )

	body( class='page page-' + bodyclass )
		main( class='page-main-' + bodyclass  )
			h1.page-header the 1056
